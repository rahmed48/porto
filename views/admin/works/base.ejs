<!DOCTYPE html>
<html lang="en">

<% include ../partials/head.ejs %>
<style>
  /* Create a custom checkbox */
  .checkmark {
    height: 25px;
    width: 25px;
    background-color: #eee;
  }
</style>

<!-- <body class="sidebar-mini"> -->

<body>
  <!-- Modal -->
  <div class="modal fade" id="add-works-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Works</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/admin/works" method="POST" enctype="multipart/form-data">
          <div class="modal-body">
            <div class="form-group">
              <label for="works_name">Works Name</label>
              <input type="text" class="form-control" id="works_name" name="works_name" placeholder="Enter Works Name"
                required>
            </div>
            <div class="form-group">
              <label for="category">Category</label>
              <select class="form-control" id="category" name="category">
                <% for(let i = 0; i < category.length; i++) { %>
                <option value="<%= category[i].category_id %>"><%= category[i].category_name %></option>
                <% } %>
              </select>
            </div>
            <div class="form-group">
              <label for="works_date">Works Date</label>
              <input type="date" class="form-control" id="works_date" name="works_date" required>
            </div>
            <div class="form-group">
              <label for="client">Client</label>
              <input type="text" class="form-control" id="client" name="client" placeholder="Enter Client Name"
                required>
            </div>
            <div class="form-group">
              <label for="add-works-image">Images</label>
              <input type="file" class="form-control" id="add-works-image" name="image" required>
            </div>
            <div class="form-group">
              <label for="work_desc">Description</label>
              <textarea class="form-control" id="work_desc" name="desc" rows="3" required></textarea>
            </div>
            <div class="form-group">
              <label for="works_url">Link</label>
              <input type="text" class="form-control" id="works_url" name="url" placeholder="Enter Link" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div id="app">
    <div class="main-wrapper">
      <div class="navbar-bg"></div>
      <% include ../partials/navbar.ejs %>
      <% include ../partials/sidebar.ejs %>


      <!-- Main Content -->
      <div class="main-content">
        <section class="section">
          <div class="section-header">
            <h1><%= title  %></h1>
          </div>
          <% include ./content.ejs %>
          <div class="section-body">
          </div>
        </section>
      </div>
      <% include ../partials/footer.ejs %>
    </div>
  </div>
  <% include ../partials/js.ejs %>
</body>

</html>