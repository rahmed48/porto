<!DOCTYPE html>
<html lang="en">
<% include ./partials/head.ejs %>

<body>
  <!-- <input type="hidden" name="base" id="base" value="<#%= `${process.env.BASE_URL}` %>"> -->
  <div id="app">
    <section class="section">
      <div class="container mt-5">
        <div class="row">
          <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
            <!-- <div class="login-brand">
              <img src="/img/stisla-fill.svg" alt="logo" width="100" class="shadow-light rounded-circle">
            </div> -->
            <div class="text-center mt-4 mb-3">
              <% include ./partials/message.ejs %>
            </div>
            <div class="card card-primary">
              <div class="card-header">
                <h4>Login</h4>
              </div>

              <div class="card-body">
                <form method="post" action="" class="needs-validation" novalidate="" autocomplete="off">
                  <div class="form-group">
                    <label for="username">Username</label>
                    <input id="username" type="text" class="form-control" name="username" tabindex="1" required
                      autofocus>
                    <div class="invalid-feedback">
                      Please fill in your username
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="d-block">
                      <label for="password" class="control-label">Password</label>
                      <div class="float-right">
                        <!-- <a href="auth-forgot-password.html" class="text-small">
                          Forgot Password?
                        </a> -->
                      </div>
                    </div>
                    <input id="password" type="password" class="form-control" name="password" tabindex="2" required>
                    <div class="invalid-feedback">
                      please fill in your password
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="custom-control custom-checkbox">
                      <input type="checkbox" name="password-toggle" class="custom-control-input" tabindex="3" id="password-toggle">
                      <label class="custom-control-label" for="password-toggle">Show Password</label>
                    </div>
                  </div>

                  <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                      Login
                    </button>
                  </div>
                </form>
              </div>
            </div>
            <div class="simple-footer">
              Copyright &copy; Rahmad Alfian Syahputra <span id="year"></span>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- General JS Scripts -->
  <% include ./partials/js.ejs %>
  <!-- Page Specific JS File -->
</body>

</html>